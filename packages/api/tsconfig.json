{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "module": "ES2022",
    "lib": ["ES2021"],
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
